{
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.6"
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Test\\TestHelper\\TestContext\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
